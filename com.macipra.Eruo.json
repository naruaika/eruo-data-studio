{
    "id" : "com.macipra.Eruo",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "eruo-data-studio",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "python3-meson-python.json",
        "python3-numpy.json",
        "python3-versioneer.json",
        "python3-pandas.json",
        {
            "name" : "eruo-data-studio",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/naruaika/eruo-data-studio"
                }
            ],
            "config-opts" : [
                "--libdir=lib"
            ]
        }
    ]
}
