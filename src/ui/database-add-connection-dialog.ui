<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="DatabaseAddConnectionDialog" parent="AdwDialog">
    <property name="title">Add New Connection</property>
    <property name="can-close">true</property>
    <property name="content-height">600</property>
    <property name="content-width">400</property>
    <child>
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <property name="title-widget">
              <object class="AdwInlineViewSwitcher">
                <property name="stack">view_stack</property>
                <style>
                  <class name="round"/>
                </style>
              </object>
            </property>
          </object>
        </child>
        <property name="content">
          <object class="AdwViewStack" id="view_stack"/>
        </property>
        <child type="bottom">
          <object class="GtkCenterBox">
            <property name="orientation">horizontal</property>
            <property name="margin-start">6</property>
            <property name="margin-end">6</property>
            <property name="end-widget">
              <object class="GtkButton">
                <property name="label">Connect</property>
                <signal name="clicked" handler="on_connect_button_clicked" swapped="no"/>
                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
            </property>
            <style>
              <class name="toolbar"/>
            </style>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>