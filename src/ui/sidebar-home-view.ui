<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="SidebarHomeView" parent="AdwBin">
    <child>
      <object class="GtkScrolledWindow">
        <property name="vexpand">true</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="margin-start">6</property>
            <property name="margin-end">6</property>
            <property name="margin-bottom">6</property>
            <property name="spacing">10</property>
            <child>
              <object class="AdwPreferencesGroup">
                <child>
                  <object class="AdwExpanderRow" id="field_section">
                    <property name="title">Fields</property>
                    <property name="subtitle">Manage which fields are visible</property>
                    <child>
                      <object class="GtkLabel" id="field_list_status">
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="label">No table selected</property>
                        <property name="halign">start</property>
                        <style>
                          <class name="status-text"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkListView" id="field_list_view">
                        <property name="single-click-activate">true</property>
                        <property name="model">
                          <object class="GtkSingleSelection">
                            <property name="model">
                              <object class="GListStore" id="field_list_store"/>
                            </property>
                          </object>
                        </property>
                        <style>
                          <class name="sidebar-list-view"/>
                        </style>
                      </object>
                    </child>
                    <style>
                      <class name="sidebar-expander-row"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwPreferencesGroup">
                <child>
                  <object class="AdwExpanderRow">
                    <property name="title">Sort &amp;amp; Filter</property>
                    <property name="subtitle">Manage how data is displayed</property>
                    <property name="activatable">false</property>
                    <property name="selectable">false</property>
                    <child>
                      <object class="GtkLabel" id="sort_filter_status">
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="label">No sort &amp; filter available</property>
                        <property name="halign">start</property>
                        <style>
                          <class name="status-text"/>
                        </style>
                      </object>
                    </child>
                    <style>
                      <class name="sidebar-expander-row"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>